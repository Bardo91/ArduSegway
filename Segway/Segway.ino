#include "IMU.h"

// ================================================================
// ===                      INITIAL SETUP                       ===
// ================================================================
IMU *imu;
void setup() {
    IMU::create();
    imu = IMU::get();
}

// ================================================================
// ===                    MAIN PROGRAM LOOP                     ===
// ================================================================
void loop() {
    // if programming failed, don't try to do anything
    if (!imu->isReady()) return;

    vec3 ypr = imu->ypr();
}
