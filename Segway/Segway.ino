#include "ArduSegway.h"
ArduSegway segway;

// ================================================================
// ===                      INITIAL SETUP                       ===
// ================================================================
void setup() {
    segway.init();
}

// ================================================================
// ===                    MAIN PROGRAM LOOP                     ===
// ================================================================
void loop() {
    // if programming failed, don't try to do anything
    if (!segway.isReady()) return;

    vec3 ypr = segway.imu().ypr();
}
